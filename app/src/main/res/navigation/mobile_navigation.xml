<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_library">

    <fragment
        android:id="@+id/nav_library"
        android:name="ch.zhaw.engineering.tbdappname.ui.library.LibraryFragment"
        android:label="@string/menu_library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_nav_library_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
        <action
            android:id="@+id/action_nav_library_to_albumDetailsFragment"
            app:destination="@id/albumDetailsFragment" />
        <action
            android:id="@+id/action_nav_library_to_artistDetailsFragment"
            app:destination="@id/artistDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_playlists"
        android:name="ch.zhaw.engineering.tbdappname.ui.playlist.PlaylistFragment"
        android:label="@string/menu_playlists"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_nav_playlists_to_playlistDetailsFragment"
            app:destination="@id/playlistDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_radiostations"
        android:name="ch.zhaw.engineering.tbdappname.ui.radiostation.RadioStationFragment"
        android:label="@string/menu_radiostations"
        tools:layout="@layout/fragment_radiostation">
        <action
            android:id="@+id/action_nav_radiostations_to_radioStationDetails"
            app:destination="@id/radioStationDetails" />
    </fragment>

    <fragment
        android:id="@+id/nav_filters"
        android:name="ch.zhaw.engineering.tbdappname.ui.filter.FilterFragment"
        android:label="@string/menu_filters"
        tools:layout="@layout/fragment_filter" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="ch.zhaw.engineering.tbdappname.ui.preferences.PreferenceFragment"
        android:label="@string/menu_settings" />
    <fragment
        android:id="@+id/playlistDetailsFragment"
        android:name="ch.zhaw.engineering.tbdappname.ui.playlist.PlaylistDetailsFragment"
        android:label="@string/menu_playlist_details"
        tools:layout="@layout/fragment_playlist_details">
        <argument
            android:name="playlist-id"
            app:argType="integer" />
        <action
            android:id="@+id/action_playlistDetailsFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/radioStationDetails"
        android:name="ch.zhaw.engineering.tbdappname.ui.radiostation.RadioStationDetailsFragment"
        android:label="@string/menu_radiostation_details"
        tools:layout="@layout/fragment_radio_station_details">
        <argument
            android:name="radiostation-id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/songDetailsFragment"
        android:name="ch.zhaw.engineering.tbdappname.ui.song.SongDetailsFragment"
        android:label="@string/menu_song_details"
        tools:layout="@layout/fragment_song_details" >
        <argument
            android:name="song-id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailsFragment"
        android:name="ch.zhaw.engineering.tbdappname.ui.album.AlbumDetailsFragment"
        android:label="@string/menu_album_details"
        tools:layout="@layout/fragment_album_details" >
        <action
            android:id="@+id/action_albumDetailsFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
        <argument
            android:name="album"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/artistDetailsFragment"
        android:name="ch.zhaw.engineering.tbdappname.ui.artist.ArtistDetailsFragment"
        android:label="@string/menu_artist_details"
        tools:layout="@layout/fragment_artist_details" >
        <action
            android:id="@+id/action_artistDetailsFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
        <argument
            android:name="artist"
            app:argType="string" />
    </fragment>
</navigation>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_around_lists"
    android:layout_marginRight="@dimen/margin_around_lists"
    tools:context=".ui.playlist.PlaylistDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ch.zhaw.engineering.aji.view.EditTextView
            android:id="@+id/playlist_name_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ch.zhaw.engineering.aji.view.ImageButton
            android:id="@+id/playlist_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/contentDescription_delete_playlist"
            android:gravity="center"
            android:padding="0dp"
            android:src="@drawable/ic_delete" />

        <ch.zhaw.engineering.aji.view.ImageButton
            android:id="@+id/playlist_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="@string/contentDescription_edit_playlist"
            android:gravity="center"
            android:padding="0dp"
            android:src="@drawable/ic_edit" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/songlist_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"  />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:name="ch.zhaw.engineering.aji.ui.playlist.PlaylistListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.playlist.SongListFragment"
        tools:listitem="@layout/fragment_song_item" />

    <ch.zhaw.engineering.aji.view.TextView
        android:id="@+id/song_prompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_songs_prompt" />
</androidx.constraintlayout.widget.ConstraintLayout>